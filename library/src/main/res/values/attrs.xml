<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NumberProgressBar">
        <attr name="numberProgressBarCurrent" format="integer"/>
        <attr name="numberProgressBarMax" format="integer"/>
        <attr name="numberProgressBarCustomValue" format="string"/>

        <attr name="numberProgressBarUnreachedColor" format="color"/>
        <attr name="numberProgressBarReachedColor" format="color"/>

        <attr name="numberProgressBarReachedBarHeight" format="dimension"/>
        <attr name="numberProgressBarUnreachedBarHeight" format="dimension"/>

        <attr name="numberProgressBarTextSize" format="dimension"/>
        <attr name="numberProgressBarTextColor" format="color"/>

        <attr name="numberProgressBarTextOffset" format="dimension"/>

        <attr name="numberProgressBarTextVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>

        <attr name="numberProgressBarPrefix" format="string" />
        <attr name="numberProgressBarSuffix" format="string" />
    </declare-styleable>
</resources>